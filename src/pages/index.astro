---
import { Image } from 'astro:assets';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import indexImage from '~/assets/images/nander.jpg';

const metadata = {
  title: 'Nander\'s Portfolio',
  ignoreTitleTemplate: true,
};


---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <div class="flex flex-col md:flex-row items-center justify-center py-12">
    <Hero>
      <Fragment slot="title">
        <span class="text-blue-600 dark:text-blue-400">Welcome</span>
      </Fragment>

      <Fragment slot="subtitle">
        Hi, I'm <strong>Nander Speerstra</strong>, a <span class="text-blue-600 dark:text-blue-400">MLOps Engineer & Software Developer</span>
        exploring software projects, machine learning projects and photography.
      </Fragment>
    </Hero>
    <Image src={indexImage} alt="Nander Speerstra" class="rounded-lg" />
</Layout>
